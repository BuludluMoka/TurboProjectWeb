@model DetailsAnnouncementModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container my-3">
    <h5 class="mt-1 d-inline ">@Model.Make @Model.Model</h5>
    <h6 class="mt-1 d-inline btn btn-danger float-right"><strong>@Model.Currencie @Model.Price</strong></h6>
    <hr class="my-3">
    <div class="row">
        <div class="col-md-7 ">
            <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    @for (int i = 0; i < Model.CarImageFiles.Count; i++)
                    {
                        @if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img class="img-fluid" src="~/MediaUpload/@Model.CarImageFiles[0]"
                                     alt="@i slide">
                            </div>
                            continue;
                        }
                        <div class="carousel-item">
                            <img class="img-fluid" src="~/MediaUpload/@Model.CarImageFiles[i]"
                                 alt="@i slide">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <ol class="carousel-indicators  ">
                    @for (int i = 0; i < Model.CarImageFiles.Count; i++)
                    {
                        @if (i == 0)
                        {
                            <li data-target="#carousel-thumb" data-slide-to="@i" class="active">
                                <img src="~/MediaUpload/@Model.CarImageFiles[i]" class="img-fluid">
                            </li>
                            continue;
                        }
                        <li data-target="#carousel-thumb" data-slide-to="@i">
                            <img src="~/MediaUpload/@Model.CarImageFiles[i]" class="img-fluid">
                        </li>
                    }
                </ol>
            </div>


            <div class="tab-content overflow-auto" id="nav-tabContent">
                <div class="card mt-2">
                    <div class="card-header">
                        Vehicle owner information<i class="fas fa-check-square ml-2" style="color: #4caf50;" data-toggle="tooltip" data-placement="right" title="Onaylı Üye"></i>
                    </div>
                    <div class="card-body">

                        <p class="card-text">
                        </p><h6>Email: <span class="text-muted">@Model.OwnerContact</span></h6>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-5">
            <div class="row">
               
                <div class="col-md-6 col-4 ">
                    <h6>Announcement No</h6><span class="text-muted">@Model.Id</span>
                    <hr>
                </div>
                <div class="col-md-6  col-4">
                    <h6>Announcement Relase</h6><span class="text-muted">@Model.RelaseDate.ToShortDateString()</span>
                    <hr>
                </div>
                <div class="col-md-6 col-4">
                    <h6>@Model.Model</h6><span class="text-muted">@Model.Make</span>
                    <hr>
                </div>
              
                <div class="col-md-6 col-4 ">
                    <h6>Year</h6><span class="text-muted">@Model.Year</span>
                    <hr>
                </div>
                <div class="col-md-6 col-4 ">
                    <h6>Price</h6><strong>@Model.Currencie @Model.Price</strong>
                    <hr>
                </div>
                
                <div class="col-md-6 col-4 ">
                </div>
            </div>
        </div>
    </div>
</div>
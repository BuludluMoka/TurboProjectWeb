@model PagedResponse<List<TurboProject.Models.Entities.FilterAnnouncements>>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .search-area {
        display: flex;
        justify-content: space-between;
    }
</style>
<header>
    <div class="jumbotron jumbotron-fluid my-2">
        <div class="container">
            <h1 class="display-4">Ücretsiz İlan Ver</h1>
            <p class="lead">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod necessitatibus aut eaque
                labore doloribus praesentium, iusto neque possimus suscipit vitae repudiandae mollitia molestias
                laborum, ad accusamus illo ab veniam. Voluptatibus!
            </p>
        </div>
    </div>
    <section class="search white-bg" style="position: relative; z-index: 100">
        <div class="container">
            <div class="search-block ">
                <form id="search-form" method="get">
                    <div class="col-12 search-area">
                        <div class="form-group w-100 mr-2">
                            <span>Select make</span>
                            <select id="Marka" name="MakeId" asp-items="@ViewBag.make" class="form-control">
                            </select>
                        </div>
                        <div class="form-group w-100 mr-2">
                            <span>Select model</span>
                            <select id="Model" name="ModelId" class="form-control">
                            </select>
                        </div>
                        <div class="form-group w-100 mr-2">
                            <span>Ban Novu</span>
                            <select id="BanType" name="BanId" asp-items="@ViewBag.bantype" class="form-control">
                            </select>

                        </div>
                    </div>
                    <div class="col-12 mt-3 search-area">
                        <div class="input-group-prepend">
                            <div class="form-group">
                                <input class="form-control" type="number" name="StartPrice"  placeholder="Price, min" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="number" name="EndPrice"  placeholder="Price, maks" />
                            </div>
                            <div class="form-group ml-1 w-25">
                                <select id="Marka" name="CurrId" asp-items="@ViewBag.currency" class="form-control">
                                </select>
                            </div>
                        </div>
                        <div class="input-group-prepend">
                            <div class="form-group">
                                <input class="form-control" type="number" name="StartYear"  placeholder="Year, min" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="number" name="EndYear" placeholder="Year, maks" />
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-danger" type="submit">Search</button>
                </form>
            </div>
        </div>
    </section>
</header>

<div class="container">
    <h4 class="text-center my-4">Sizin İçin Önerilenler</h4>
    <div class="row announces" id="car">
        <partial name="_AnnouncementFilterListPartial" model="Model" />
    </div>
    <footer class="pt-4 md-5 pt-md-5 border-top my-4">
        <div class="row">
            <div class="col-lg-3 col-md-12  text-center mb-3">
                <a id="ilan" class="btn btn-success" href="/user/createilan" role="button">Ücretsiz İlan Ver</a>
            </div>
            <div class="col-lg-3 col-md-3  text-center">
                <h5>Kurumsal</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Hakkımızda</a></li>
                    <li><a class="text-muted" href="#">İnsan Kaynakları</a></li>
                    <li><a class="text-muted" href="#">Haberler</a></li>
                    <li><a class="text-muted" href="#">İletişim</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <h5>Gizlilik ve Kullanım</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Güvenli Alışverişin İpuçları</a></li>
                    <li><a class="text-muted" href="#">Sözleşmeler ve Kurallar</a></li>
                    <li><a class="text-muted" href="#">Üyelik Sözleşmesi</a></li>
                    <li><a class="text-muted" href="#">Kullanım Koşulları</a></li>
                    <li><a class="text-muted" href="#">Kişisel Verilerin Korunması</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-3  text-center">
                <h5>
                    Bizi Takip Edin
                </h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="https://github.com/ozturkselim99">Github</a></li>
                    <li><a class="text-muted" href="https://www.linkedin.com/in/ozturkselim/">Linkedin</a></li>
                    <li><a class="text-muted" href="#">Twittter</a></li>
                    <li><a class="text-muted" href="#">Instagram</a></li>
                    <li><a class="text-muted" href="#">Youtube</a></li>
                </ul>
            </div>
        </div>
    </footer>
</div>
@section Scripts{
    <script>

        $(document).ready(function () {
            $('#search-form').submit(function (e) {
                e.preventDefault();
                var form = $(this); 
                var data = form.serialize();
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("AnnouncementFilterList", "Announcement")',
                    data: data,
                    success: function (response) {
                        $('.announces').html(response);
                    },
                    error: function (xhr, status, error) {
                        alert(xhr);
                        console.log(xhr);
                        console.log(status);
                        console.log(error);
                    }
                });
            });
        });


          $('#Marka').change(function () {
                var makeId = $(this).val();
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetModelList", "Announcement")',
                    dataType: "JSON",
                    data: { 'id': makeId },
                    success: function (models) {
                        $('#Model').empty();
                        $.each(models, function (i, model) {
                            $('#Model').append('<option value="' + model.value + '">' + model.text + '</option>');
                        });
                    }
                });
          });

        function paginationSort(page) {
            var pageNumber = page;

            paginationSortData = {
                PageIndex: page
                //sort: $(".custom-select option:selected").val()
            };
            console.log(paginationSortData);
            $.ajax({
                type: 'GET',
                url: '@Url.Action("AnnouncementFilterList", "Announcement")',
                data: paginationSortData,
                success: function (res) {
                    $(".announces").html(res);
                    $("html, body").animate({
                        scrollTop: 50
                    })
                },
                error: function () {
                    alert("error");
                }
            });
        };

    </script>

}